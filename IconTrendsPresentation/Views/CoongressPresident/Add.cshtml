@using IconTrendsPresentation.Models
@model CongressPresident
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-11 m-4">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Kongre Başkanı Ekle</h6>
        <form method="post">
            <div class="mb-3">
                <label for="congress" class="form-label">Kongre</label>
                <input type="text" asp-for="@Model.CongressId" class="form-control" id="congress">
            </div>
          
            <div class="mb-3">
                <label for="president" class="form-label">Kongre Başkan Adı</label>
                <input id="president" asp-for="@Model.CongressPresidentName" type="text" class="form-control " />
            </div>
            <button type="submit" class="btn btn-success">Oluştur</button>
        </form>
    </div>
</div>

