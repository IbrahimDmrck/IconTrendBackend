@using IconTrendsPresentation.Models
@model List<TransportLayover>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-11  m-4 ">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Ulaşım & Konaklama  Bilgileri</h6>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kapasite</th>
                        <th scope="col">En az Talep</th>
                        <th scope="col">Fiyat</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col">Sil</th>
                        <th scope="col">Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.TransportId</th>
                            <td>@item.Capacity</td>
                            <td>@item.MinDemand</td>
                            <td>@item.Price</td>
                            <td>@item.Description</td>
                            <td><a href="#" class="btn btn-outline-primary">Sil</a></td>
                            <td><a href="#" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="BaslikEkle.html" type="button" class="btn btn-outline-success mt-3">Ulaşım & Konaklama Bilgisi Ekle</a>
        </div>

    </div>
</div>
